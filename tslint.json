{
    "extends": [
        "tslint-config-standard",
        "tslint-eslint-rules",
        "tslint-react"
    ],
    "rules": {
        "one-variable-per-declaration": false,
        "no-conditional-assignment": false,
        "array-bracket-spacing": [
            true,
            "always",
            {
                "objectsInArrays": false,
                "singleValue": false
            }
        ],
        "curly": false,
        "import-spacing": true,
        "indent": [
            true
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "jsx-boolean-value": [
            false
        ],
        "jsx-no-multiline-js": [
            false
        ],
        "max-line-length": [
            false
        ],
        "member-access": [
            false,
            "check-accessor"
        ],
        "member-ordering": [
            false
        ],
        "no-console": [
            false
        ],
        "no-unused-expression": [false],
        "no-default-export": true,
        "no-irregular-whitespace": true,
        "no-multi-spaces": true,
        "no-shadowed-variable": false,
        "no-trailing-whitespace": true,
        "no-unnecessary-callback-wrapper": false,
        "arrow-return-shorthand": true,
        "no-unused-variable": [
            true
        ],
        "no-var-requires": false,
        "object-curly-spacing": [
            true,
            "always",
            {
                "objectsInObjects": false
            }
        ],
        "object-literal-key-quotes": [
            false
        ],
        "only-arrow-functions": [
            true,
            "allow-declarations"
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-first"
            }
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "valid-jsdoc": [
            "error",
            {
                "prefer": {
                    "arg": "param",
                    "argument": "param",
                    "class": "constructor",
                    "return": "returns",
                    "virtual": "abstract"
                }
            }
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-typecast",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast"
        ]
    }
}
